{
  "appId": "com.carlos-neimar.dashpro",
  "icon": "public/icon.png",
  "files": [
    "dist-electron/**/*", 
    "dist-react/**/*"     
  ],
  "extraResources": [
    {
      "from": "dist-react",
      "to": "dist-react",
      "filter": ["**/*"]
    }
  ],
  "asar": false,
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target": [
      "portable",
      "msi"
    ]
  }
}